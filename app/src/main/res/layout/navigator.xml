<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_h"
    android:background="@color/white">


    <ImageView
        android:id="@+id/navi_left"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:scaleType="center"
        android:src="@mipmap/ic_back" />
    <TextView
        android:id="@+id/navi_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/navi_left"
        android:gravity="center"
        android:text=""
        android:textColor="@color/txt_lv6"
        android:textSize="@dimen/txt_title" />
    <TextView
        android:id="@+id/navi_left_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/navi_left"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textColor="@color/txt_lv6"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/navi_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:gravity="left|center_vertical"
        android:layout_centerVertical="true"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text=""
        android:textColor="@color/txt_lv6"
        android:textSize="@dimen/txt_size_13" />

    <ImageView
        android:id="@+id/navi_right_img1"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/navi_right_img"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:paddingLeft="10dp" />

    <ImageView
        android:id="@+id/navi_right_img"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />

</RelativeLayout>