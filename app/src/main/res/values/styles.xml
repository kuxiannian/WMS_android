<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Theme.Shrine" parent="Theme.AppCompat.NoActionBar">
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <!-- 启动样式 -->
    <style name="Theme.AppStartLoad" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AdTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Anim_fade" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>

    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_zoom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_zoom_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_zoom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_zoom_out</item>
    </style>

    <!-- 协议check-->
    <style name="checkbox_default_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_selector</item>
        <item name="android:textColor">@color/txt_lv4</item>
        <item name="android:padding">10dp</item>
    </style>





    <!--Button-->
    <style name="button_style" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:background">@drawable/btn_main_rect_5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Button-->
    <style name="button_style_round">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_btn_round_selector</item>
    </style>


    <!--Button-->
    <style name="button_style_round_small">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_btn_round_selector</item>
    </style>


    <!-- 底部弹出层 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_to_bottom</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>


    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <!--<item name="tabBackground">@drawable/bg_tab_xsqg</item>-->
    </style>

    <style name="mine_order_text">
        <item name="android:textColor">@color/txt_lv4</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_to_bottom</item>
    </style>

    <style name="NoSpaceActionBarTheme" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="HintDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="layout_padding">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="toolbar_title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/txt_lv7</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_shop_detail_padding">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="weekIndicatorStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ff25adff</item>
    </style>

    <!--居中对话框-->
    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowNoTitle">true</item>       <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--<item name="android:backgroundDimEnabled">false</item> 背景不变暗-->
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- <item name="android:background">#00000000</item>
         <item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="button_stytle">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_btn_round_main</item>
    </style>


    <style name="text_stytle_btn">
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#FF2D1B04</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- 支付check-->
    <style name="checkbox_pay_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_pay_selector</item>
    </style>

    <style name="button_stytle_small">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_btn_round_main</item>
    </style>

    <style name="bg_message">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_message</item>
    </style>

    <!--tabLayout字体-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="toolBarTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--底部导航RadioGroup-->
    <style name="main_bottom_tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/text_bg</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="dialogAnim">
        <item name="android:windowEnterAnimation">@anim/fade_in2</item>
        <item name="android:windowExitAnimation">@anim/fade_out2</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorLine</item>
        <item name="colorControlActivated">@color/colorTheme</item>
    </style>

